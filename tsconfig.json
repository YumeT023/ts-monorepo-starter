{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "target": "es2022",
    "module": "esnext",
    "outDir": "temp",
    "newLine": "LF",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": false,
    "importHelpers": true,
    "experimentalDecorators": true
  }
}
